{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native", 
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "firebase/auth/react-native": [
        "./node_modules/firebase/auth/react-native"
      ]
    },
    "ignoreDeprecations": "6.0",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "firebase.d.ts",
    "src",
    "App.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
